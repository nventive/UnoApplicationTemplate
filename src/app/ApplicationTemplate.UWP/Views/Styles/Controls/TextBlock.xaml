	<Style x:Key="Body3"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialBody2}">
		<Setter Property="FontFamily"
				Value="{StaticResource FontFamily01Light}" />
		<Setter Property="FontSize"
				Value="12" />
		<Setter Property="Foreground"
				Value="{StaticResource MaterialOnSurfaceBrush}" />
		<Setter Property="LineHeight"
				Value="17" />
		<Setter Property="CharacterSpacing"
				Value="0.4" />
	</Style>

	<Style x:Key="Caption"
		   TargetType="TextBlock"
		   BasedOn="{StaticResource MaterialCaption}">
		<Setter Property="FontFamily"
				Value="{StaticResource FontFamily01Light}" />
		<Setter Property="Foreground"
				Value="{StaticResource MaterialOnSurfaceBrush}" />
		<Setter Property="LineHeight"
				Value="17" />
		<Setter Property="CharacterSpacing"
				Value="0.4" />
	</Style>
</ResourceDictionary>
