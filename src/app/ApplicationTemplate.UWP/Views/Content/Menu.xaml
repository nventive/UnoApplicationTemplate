<local:AttachableUserControl x:Class="ApplicationTemplate.Views.Content.Menu"
							 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
							 xmlns:local="using:ApplicationTemplate.Views"
							 xmlns:ne="using:Nventive.View.Extensions"
							 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
							 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
							 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
							 ne:BindableVisualState.VisualStateName="{Binding MenuState}">

	<Grid x:Name="MenuRoot"
		  Background="{StaticResource MaterialPrimaryBrush}">
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:Name="MenuStates">

				<VisualStateGroup.Transitions>
					<VisualTransition From="Open"
									  To="Closed">
						<Storyboard>
							<!-- CloseTranslateAnimation.To is set in code behind -->
							<DoubleAnimation x:Name="CloseTranslateAnimation"
											 Storyboard.TargetName="MenuRoot"
											 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
											 To="80"
											 Duration="0:0:0.3">
								<DoubleAnimation.EasingFunction>
									<CubicEase EasingMode="EaseInOut" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
						</Storyboard>
					</VisualTransition>
				</VisualStateGroup.Transitions>

				<VisualState x:Name="Open">
					<Storyboard>
						<DoubleAnimation Storyboard.TargetName="MenuRoot"
										 Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
										 To="0"
										 Duration="0:0:0.3">
							<DoubleAnimation.EasingFunction>
								<CubicEase EasingMode="EaseInOut" />
							</DoubleAnimation.EasingFunction>
						</DoubleAnimation>
					</Storyboard>
				</VisualState>

				<VisualState x:Name="Closed" />
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<Grid.RenderTransform>
			<!-- MenuTranslateTransform.Y is set in code behind -->
			<TranslateTransform x:Name="MenuTranslateTransform"
								Y="80" />
		</Grid.RenderTransform>
		<Grid.RowDefinitions>
			<RowDefinition Height="75" />
			<!-- SafeAreaRow.Height is set in code behind -->
			<RowDefinition x:Name="SafeAreaRow"
						   Height="0" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Button Grid.Column="0"
				Command="{Binding ShowHome}"
				Background="{StaticResource MaterialPrimaryBrush}"
				HorizontalAlignment="Center">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<PathIcon Data="M11.99 2.5C6.47 2.5 2 6.98 2 12.5C2 18.02 6.47 22.5 11.99 22.5C17.52 22.5 22 18.02 22 12.5C22 6.98 17.52 2.5 11.99 2.5ZM12 20.5C7.58 20.5 4 16.92 4 12.5C4 8.08 7.58 4.5 12 4.5C16.42 4.5 20 8.08 20 12.5C20 16.92 16.42 20.5 12 20.5ZM15.5 11.5C16.33 11.5 17 10.83 17 10C17 9.17 16.33 8.5 15.5 8.5C14.67 8.5 14 9.17 14 10C14 10.83 14.67 11.5 15.5 11.5ZM8.5 11.5C9.33 11.5 10 10.83 10 10C10 9.17 9.33 8.5 8.5 8.5C7.67 8.5 7 9.17 7 10C7 10.83 7.67 11.5 8.5 11.5ZM12 18C14.33 18 16.31 16.54 17.11 14.5H6.89C7.69 16.54 9.67 18 12 18Z"
						  HorizontalAlignment="Center"
						  Foreground="white"
						  Height="24"
						  Grid.Row="0" />
				<TextBlock Text="Jokes"
						   x:Uid="Menu_Home"
						   HorizontalAlignment="Center"
						   Foreground="{StaticResource MaterialOnPrimaryColor}"
						   Grid.Row="1" />
			</Grid>
		</Button>

		<Button Grid.Column="1"
				Command="{Binding ShowPosts}"
				Background="{StaticResource MaterialOnBackgroundColor}"
				HorizontalAlignment="Center">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<PathIcon Data="M21.99 4.5C21.99 3.4 21.1 2.5 20 2.5H4C2.9 2.5 2 3.4 2 4.5V16.5C2 17.6 2.9 18.5 4 18.5H18L22 22.5L21.99 4.5ZM18 14.5H6V12.5H18V14.5ZM18 11.5H6V9.5H18V11.5ZM18 8.5H6V6.5H18V8.5Z"
						  HorizontalAlignment="Center"
						  Foreground="white"
						  Height="24"
						  Grid.Row="0" />
				<TextBlock Text="Posts"
						   x:Uid="Menu_Posts"
						   HorizontalAlignment="Center"
						   Foreground="{StaticResource MaterialOnPrimaryColor}"
						   Grid.Row="1" />
			</Grid>
		</Button>

		<Button Grid.Column="2"
				Command="{Binding ShowSettings}"
				Background="{StaticResource MaterialOnBackgroundColor}"
				HorizontalAlignment="Center">
