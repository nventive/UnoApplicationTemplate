						  HorizontalAlignment="Center"
						  Foreground="white"
						  Height="24"
						  Grid.Row="0" />
				<TextBlock Text="Settings"
						   x:Uid="Menu_Settings"
						   HorizontalAlignment="Center"
						   Foreground="{StaticResource MaterialOnPrimaryColor}"
						   Grid.Row="1" />
			</Grid>
		</Button>

	</Grid>
