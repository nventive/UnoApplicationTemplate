<Application x:Class="ApplicationTemplate.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 RequestedTheme="Light">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

				<!-- Load Toolkit resources -->
				<ToolkitResources xmlns="using:Uno.Toolkit.UI" />

				<!-- Uno material -->
				<MaterialTheme xmlns="using:Uno.Material"
							   FontOverrideSource="ms-appx:///Styles/Application/Fonts.xaml"
							   ColorOverrideSource="ms-appx:///Styles/Application/MaterialOverride.xaml" />

				<ResourceDictionary Source="Styles/Application/ColorPalette.xaml" />
				<ResourceDictionary Source="Styles/Application/Brushes.xaml" />
				<ResourceDictionary Source="Styles/Application/Converters.xaml" />
				<ResourceDictionary Source="Styles/Application/Fonts.xaml" />
				<ResourceDictionary Source="Styles/Application/Icons.xaml" />
				<ResourceDictionary Source="Styles/Application/LayoutConstants.xaml" />
				<ResourceDictionary Source="Styles/Controls/Button.xaml" />
				<ResourceDictionary Source="Styles/Controls/BottomTabBarButton.xaml" />
				<ResourceDictionary Source="Styles/Controls/CalendarView.xaml" />
				<ResourceDictionary Source="Styles/Controls/CheckBox.xaml" />
				<ResourceDictionary Source="Styles/Controls/ComboBox.xaml" />
				<ResourceDictionary Source="Styles/Controls/CommandBar.xaml" />
				<ResourceDictionary Source="Styles/Controls/DataLoaderView.xaml" />
				<ResourceDictionary Source="Styles/Controls/DataValidationView.xaml" />
				<ResourceDictionary Source="Styles/Controls/ExtendedSplashScreen.xaml" />
