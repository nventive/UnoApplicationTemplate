				<ResourceDictionary Source="Styles/Controls/Frame.xaml" />
				<ResourceDictionary Source="Styles/Controls/GridViewHeaderItem.xaml" />
				<ResourceDictionary Source="Styles/Controls/GridViewItem.xaml" />
				<ResourceDictionary Source="Styles/Controls/HyperlinkButton.xaml" />
				<ResourceDictionary Source="Styles/Controls/ListView.xaml" />
				<ResourceDictionary Source="Styles/Controls/ListViewHeaderItem.xaml" />
				<ResourceDictionary Source="Styles/Controls/ListViewItem.xaml" />
				<ResourceDictionary Source="Styles/Controls/PasswordBox.xaml" />
				<ResourceDictionary Source="Styles/Controls/PathControl.xaml" />
				<ResourceDictionary Source="Styles/Controls/RadioButton.xaml" />
				<ResourceDictionary Source="Styles/Controls/TextBlock.xaml" />
				<ResourceDictionary Source="Styles/Controls/TextBox.xaml" />
				<ResourceDictionary Source="Styles/Controls/ToggleButton.xaml" />
				<ResourceDictionary Source="Styles/Controls/ToggleSwitch.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

</Application>
