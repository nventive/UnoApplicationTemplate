<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.nventive.internal.applicationtemplate" android:versionCode="1" android:versionName="1.0" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="26" android:targetSdkVersion="31" />
	<application android:label="Playground" android:icon="@mipmap/ic_launcher" android:networkSecurityConfig="@xml/network_security_config">
		<!-- This is to use Google Maps. -->
		<!-- See: https://stackoverflow.com/questions/50461881/java-lang-noclassdeffounderrorfailed-resolution-of-lorg-apache-http-protocolve -->
		<uses-library android:name="org.apache.http.legacy" android:required="false" />
		<!-- This is to properly support widescreen devices. -->
		<!-- See: https://android-developers.googleblog.com/2017/03/update-your-app-to-take-advantage-of.html -->
		<meta-data android:name="android.max_aspect" android:value="2.1" />
		<!-- This is required to retrieve the internal log file and send it by email. -->
		<provider android:name="androidx.core.content.FileProvider" android:authorities="${applicationId}" android:exported="false" android:grantUriPermissions="true">
			<meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/files" />
		</provider>
	</application>
</manifest>