{
  "$schema": "http://json.schemastore.org/template",
  "author": "nventive",
  "name": "nventive Mobile Template",
  "identity": "NV.Templates.Mobile",
  "groupIdentity": "NV.Templates.Mobile",
  "shortName": "nv-mobile",
  "classifications": ["Mobile"],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "ApplicationTemplate",
  "preferNameDirectory": true,
  "guids": [
    "752f6418-d9b7-4185-ae8c-79d8ddbcabcd"
  ],
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**/*",
            "**/*.user",
            "**/*.lock.json",
            "**/.vs/**",
            "**/.git/**",
            "template-scripts/**",
            "**/.mergify.yml",
            "CHANGELOG.md",
            "CODE_OF_CONDUCT.md",
            "CONTRIBUTING.md",
            "LICENSE"
          ],
          "copyOnly": [
            "**/*README.md",
            "**/*.aprof" 
          ]
        }
      ]
    }
  ],
  "SpecialCustomOperations": {
    "**/*.yml": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "#-if" ],
            "else": [ "#-else" ],
            "elseif": [ "#-elseif" ],
            "endif": [ "#-endif" ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    },
    "**/*.projitems": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "<!--#if" ],
            "else": [ "<!--#else" ],
            "elseif": [ "<!--#elseif" ],
            "endif": [ "#endif -->" ],
            "trim": true,
            "wholeLine": true,
            "evaluator": "C++"
          }
        }
      ]
    }
  },
  "symbols": {
  }
}
